.post-container{
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  border: 1rpx solid #eee;
}
.post-user{
  height: 100rpx;
}
.user-image{
  width: 80rpx;
  height: 80rpx;
  vertical-align: middle;
}
.user-time{
  line-height: 100rpx;
  font-size: 30rpx;
  margin-left: 20rpx;
}
.user-deltime{
  float: right;
  line-height: 100rpx;
  margin-right: 20rpx;
}
.post-title{
  font-size: 40rpx;
  font-weight: bold;
  padding: 10rpx;
}
.post-desc{
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  text-align: left;
  font-size: 24rpx;
  color: #000;
  letter-spacing: 4rpx;
}
.post-image{
  height: 300rpx;
  width: 100%;
}

.post-chat{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.post-view{
  margin-left: 10rpx;
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
